<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
    <!-- MAIN CONTENT -->
    
<link rel='stylesheet' href='/Content/survey.css' />
<link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Balsamiq+Sans&family=Comfortaa:wght@500&family=Josefin+Sans:ital@1&family=Montserrat:wght@500&display=swap" rel="stylesheet">

    
  <main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-10">
        <h3 class="list_title"> Surveys List </h3>
          <br>
          <table align="top" class="table table-striped table-hover table-dark ">
            <tr>
            <thead>
            <tr>
              <th class="text-center">Survey Topic</th>
              <th class="text-center">Answer</th>        
            </tr>
          </thead>
            <!-- Template Row -->
            <% for (let i = 0; i < surveyList.length; i++) { %>
              <tr>
                <td class="text-center"><%= surveyList[i].topic %></td>
                <td class="text-center">
                <a href="/survey/answer/<%= surveyList[i]._id %>" class="btn btn-primary">
                Go to this survey
                 </a>
                 </td>
                </td> 
            <% } %>
          </td>            
        </tr>
          </table>
        </div>
      </div>
  </main>

  