<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
  
    <!-- MAIN CONTENT -->
  <main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
        <h3 class="list_title">My Surveys List </h3>
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Survey Topic</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
            <!-- Template Row -->
            <% for (let i = 0; i < surveyList.length; i++) { %>
            <tr>
              <td class="text-center"><%= surveyList[i].topic %></td>
              <td class="text-center">
              <a href="/survey/answer/<%= surveyList[i]._id %>" class="btn btn-primary">
              Go to this survey
               </a>
               </td>
               <td class="text-center">
                <a href="/survey/edit/<%= surveyList[i]._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-pencil-alt"></i> Edit</a>
              </td>
              <td class="text-center">
                <a href="/survey/delete/<%= surveyList[i]._id %>" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
  </main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  
