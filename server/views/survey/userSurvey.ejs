<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
  
    <!-- MAIN CONTENT -->
  <link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Balsamiq+Sans&family=Comfortaa:wght@500&family=Josefin+Sans:ital@1&family=Montserrat:wght@500&display=swap" rel="stylesheet">




<link rel='stylesheet' href='/Content/survey.css' />

  
  <main class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-11">
        <h3 class="list_title">My Surveys List </h3>
          <br>
          <table class="table table-striped table-hover table-dark ">
            <tr>
              <th class="text-center">Survey Topic</th>
              <th class="text-center">Go to a Survey</th>
              <th class="text-center">Edit Survey</th>
              <th class="text-center">Delete Survey</th>
              <th class="text-center">Survey Results</th>
            </tr>
            <!-- Template Row -->
            <% for (let i = 0; i < surveyList.length; i++) { %>
            <tr>
              <td class="text-center"><%= surveyList[i].topic %>
              </td>
              <td class="text-center">
              <a href="/survey/answer/<%= surveyList[i]._id %>" class="btn btn-info btn-sm">
              Go to this survey
               </a>
               </td>
               <td class="text-center">
                <a href="/survey/edit/<%= surveyList[i]._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-pencil-alt"></i>Edit</a>
              </td>
              <td class="text-center">
                <a href="/survey/delete/<%= surveyList[i]._id %>" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt"></i>Delete</a>
              </td>
               <td class="text-center">
              <a href="/survey/result/<%= surveyList[i]._id %>" class="btn btn-primary btn-sm">
              Result
               </a>
               </td>
            </tr>
            
            <% } %>
          </table>
        </div>
      </div>
  </main>

 
