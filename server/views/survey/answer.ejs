<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
<link href="/public/Content/app.css">
  

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-5 col-md-3">
                 <form class="form" method="post">
            <input type="hidden" class="form-control" id="NameTextField"
                    placeholder="Survey Topic" name="surveyTopic" value="<%= title %>" required>
            <input type="hidden" class="form-control" id="NameTextField"
                    placeholder="Questions" name="numberofQuestions" value="<%= surveyList.questions.length %>" required>
            <input type="hidden" class="form-control" id="NameTextField"
                placeholder="Question Type" name="type" value="<%= type %>" required>
            
        <% for (let count = 0; count < surveyList.questions.length; count++) { %>
           
          <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="../../Assets/images/undraw_my_answer_iw6k.svg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">Select the Your Answer</h5>
              <hr>
          <fieldset class="form-group">
            <input type="hidden" class="form-control" id="NameTextField"
                placeholder="Question Topic" name="questionTopic<%=count%>"  
                value="<%= surveyList.questions[count].questionTopic %>" required>
            <legend><%= surveyList.questions[count].questionTopic %></legend> 
             <% if (type== 1) {%>   
                      <div class="form-group">
                        <label for="Textarea">Your Answer</label>
                        <textarea class="form-control" id="Textarea" rows="3" name = "question<%=count%>" required></textarea>
                      </div> 

                 <% } else if(type == 2) { %>
                <% for (let i = 0; i<surveyList.questions[count].questionAns.length; i++) { %>   
                     <div class="form-check">
                       <ul>
                         <li> 
                          <label class="form-check-label">
                          <% if (surveyList.questions[count].questionAns[i].answer != "") { %>
                            <input type="radio" class="form-check-input" name="question<%=count%>" value="<%= surveyList.questions[count].questionAns[i].answer %>" required>
                            <%= surveyList.questions[count].questionAns[i].answer %>
                           <% } else { %>
                           <input type="hidden" class="form-check-input" name="question<%=count%>" value="<%= surveyList.questions[count].questionAns[i].answer %>">
                            <%= surveyList.questions[count].questionAns[i].answer %>
                          <% }  %>
                     </label>
                         </li></ul>
                     </div>
                     <br>     
                    <% } %> 
               <% } %>
                  </fieldset>
            
                </div>
              </div>
              
             <% } %> 

            <fieldset class="form-group text-right">
            <button type="submit" class="btn btn-success"><i class="fa fa-check-square-o"></i> Submit</button>
            <a href="/survey" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </fieldset>

        
         </form>
        </div>
    </div>
    
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





